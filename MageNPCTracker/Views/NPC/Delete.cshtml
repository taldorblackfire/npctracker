@model MageNPCTracker.Models.NPCView

@{
    ViewData["Title"] = "Delete NPC";
}

<h1>Delete NPC</h1>

<h3>Are you sure you want to delete this NPC?</h3>
<div>
    <h4>NPC Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Alias
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShadowName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order)
        </dd>
        <dt class="col-sm-2">
            Order Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderTitle)
        </dd>
        <dt class="col-sm-2">
            Consilium Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ConsiliumTitle)
        </dd>
        <dt class="col-sm-2">
            Cabal
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cabal)
        </dd>
        <dt class="col-sm-2">
            Gnosis
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gnosis)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="NPCId" />
        <input type="submit" value="Delete" class="btn btn-danger offset-md-6" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>