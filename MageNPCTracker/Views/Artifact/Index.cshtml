@model IEnumerable<MageNPCTracker.Models.ArtifactView>

@{
    ViewData["Title"] = "Artifact List";
}

<h2>Artifact List</h2>

<p><a asp-action="Create">Create New Artifact</a></p>

<table class="table webgrid-table" id="ArtifactTable">
    <thead>
        <tr class="webgrid-header" style="text-align: center;">
            <th>Name</th>
            <th>Mana Capacity</th>
            <th>Path</th>
            <th>Merit Cost</th>
            <th>Gnosis</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="webgrid-row-style" style="text-align: center;">
                <td>@Html.ActionLink(@item.Name, "Details", new { id = item.Id })</td>
                <td>@item.Mana</td>
                <td>@item.Path</td>
                <td>@item.Cost</td>
                <td>@item.Gnosis</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script type="text/javascript">
        var table = $('#ArtifactTable').DataTable();
    </script>
}
